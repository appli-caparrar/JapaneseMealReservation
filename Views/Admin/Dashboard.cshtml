<div class="container shadow dashboardContainer" style="background-color: #FFFEF5; padding-bottom: 60px;">
@* Table *@
    <div class="row g-3 mb-4 px-4" >
        <div class="d-flex justify-content-between align-items-center mt-5 mb-3">
            <h1 class="" style="font-size: 32px;">List of Uploaded Menu</h1>

            <!-- Date Filter -->
            <form asp-controller="Admin" asp-action="FilterMenu" method="get" class="d-flex align-items-center gap-2">
                <span class="mx-1">From</span>
                <input type="date" name="startDate" id="startDate"
                       value="@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "")"
                       class="form-control form-control-sm"
                       style="border:none; border-bottom:1px solid #ccc; border-radius:0; background:transparent; padding-left:0; padding-right:0; box-shadow:none;" />

                <span class="mx-1">to</span>
                <input type="date" name="endDate" id="endDate"
                       value="@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "")"
                       class="form-control form-control-sm"
                       style="border:none; border-bottom:1px solid #ccc; border-radius:0; background:transparent; padding-left:0; padding-right:0; box-shadow:none;" />

                <button type="submit" class="btn btn-sm btn-primary" style="height:32px;">Filter</button>
            </form>
        </div>


        @{
            var filteredMenus = Model?.Menus?.OrderBy(m => m.AvailabilityDate).ToList();
        }

        @if (Model?.Menus != null && Model.Menus.Any())
        {
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th class="hide-col">Id</th>
                        <th>Availability Date</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Menu</th>
                        <th>Price</th>
                        <th style="width: 20%;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Menus.OrderBy(m => m.AvailabilityDate))
                    {
                        <tr>
                            <td class="hide-col">@item.Id</td>
                            <td>
                                @(item.AvailabilityDate.HasValue
                                    ? item.AvailabilityDate.Value.ToString("MM/dd/yyyy")
                                    : "No Date")
                            </td>
                            <td class="text-center align-middle">
                                @if (!string.IsNullOrWhiteSpace(item.ImagePath))
                                {
                                    <img src="..@item.ImagePath" alt="@item.Name" width="100" />
                                }
                                else
                                {
                                    <i class="fa-solid fa-image"></i>
                                    <span>No Image</span>
                                }
                            </td>

                            <td class="text-center align-middle">@item?.Name</td>
                            <td class="align-middle">@item?.Description</td>
                            <td class="align-middle">@item?.MenuType</td>
                            <td class="text-center align-middle">@item?.Price.ToString("C", new CultureInfo("en-PH"))</td>
                            <td class="d-flex justify-content-between align-items-center text-center align-middle" style="min-height: 50px;">
                                <a class="btn btn-warning"
                                   data-bs-toggle="modal"
                                   data-bs-target="#itemModal"
                                   data-id="@item.Id"
                                   data-image="..@item.ImagePath"
                                   data-name="@item.Name"
                                   data-price="@item.Price"
                                   data-description="@item.Description">
                                    <i class="fa-solid fa-pen-to-square"></i> &nbsp; Update
                                </a>

                               <form id="deleteForm-@item.Id" asp-controller="Menu" asp-action="DeleteMenu" method="post">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="button" class="btn btn-danger mx-2" onclick="confirmDelete('@item.Id')">
                                        <i class="fa-solid fa-trash"></i> &nbsp; Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No menu items found for the selected date range.</p>
        }


    </div>
</div>

