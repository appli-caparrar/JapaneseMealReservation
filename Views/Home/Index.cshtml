@{
    ViewData["ShowDashboardHeader"] = true;
    ViewData["ShowLoginAdmin"] = true;
    ViewData["ShowBookNow"] = true;
    ViewData["Title"] = "Welcome Page";
}

@model JapaneseMealReservation.ViewModels.HomeViewModel

<div id="landingPage" class="">

    <div class="text-center text-light mb-4 mt-5">
        <h1>Welcome to Japanese Meal Reservation System</h1>
        <p class="text-light">日本の食事予約システムへようこそ</p>
    </div>

    <div class="row justify-content-center g-4 pt-4 pb-4 reservationBtnWrapper">
        <div class="text-center">
            <a class="btn btn-warning reservationBtn" asp-controller="Reservation" asp-action="MealReservation">
                <span class="fw-bold"><i class="fa-solid fa-utensils"></i> &nbsp; View Menu</span>
                <br>
                <small>メニューを見る</small>
            </a>

            <a class="btn btn-warning reservationBtn" asp-controller="Order" asp-action="OrderSummary">
                <span class="fw-bold"><i class="fa-solid fa-cart-shopping"></i> &nbsp; My Orders</span>
                <br>
                <small>注文を見る</small>
            </a>
        </div>
    </div>

    <!-- ✅ Carousel Section (Final version) -->
    <div class="d-flex justify-content-center pt-4">
        <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @if (Model.WeeklyMenus != null && Model.WeeklyMenus.Any())
                {
                    var index = 0;
                    var defaultImages = new[]
                    {
                        Url.Content("~/images/bento.jpg"),
                        Url.Content("~/images/curry.png"),
                        Url.Content("~/images/maki.jpg"),
                        Url.Content("~/images/noodles.png")
                    };

                    foreach (var menu in Model.WeeklyMenus)
                    {
                        var isActive = index == 0 ? "active" : "";

                        // If menu.ImagePath is null/empty, cycle through default images
                        var imageSrc = !string.IsNullOrEmpty(menu.ImagePath)
                        ? Url.Content(menu.ImagePath.StartsWith("~") ? menu.ImagePath : "~" + menu.ImagePath)
                        : Url.Content("~/images/No photo image.gif");

                        <div class="carousel-item @isActive" data-bs-interval="3000">
                            <img src="@imageSrc" class="d-block w-100 rounded shadow" alt="@menu.Name">
                            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded-3 p-2">
                                <h5>@menu.Name</h5>
                                @if (!string.IsNullOrEmpty(menu.Description))
                                {
                                    <p>@menu.Description</p>
                                }
                                <small>@menu.AvailabilityDate?.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>

                        index++;
                    }
                }
                else
                {
                    var fallbackImages = new[]
                    {
                        Url.Content("~/images/bento.jpg"),
                        Url.Content("~/images/curry.png"),
                        Url.Content("~/images/maki.jpg"),
                        Url.Content("~/images/noodles.png")
                    };

                    var activeIndex = 0;
                    foreach (var img in fallbackImages)
                    {
                        var isActive = activeIndex == 0 ? "active" : "";
                        <div class="carousel-item @isActive" data-bs-interval="3000">
                            <img src="@img" class="d-block w-100 rounded shadow" alt="Default Meal">
                        </div>
                        activeIndex++;
                    }
                }
            </div>


            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <script>
        const loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
        loginModal.show();
    </script>
}
